.row {
  display: flex;
  justify-content: space-between;
  width: 1181;
  margin-top: 0.5em;
}

.right {
  text-align: right;
}

.right > input {
  margin-right: 2em;
  width: 5em;
  text-align: right;
}

#output {
  border: solid 1px black;
  flex-grow: 1;
  margin-top: 0;
  margin-left: 1em;
  padding: 0.5em;
  background: black;
  color: white;
  overflow-y: scroll;
  overflow-x: hidden;
  height: 23em;
}